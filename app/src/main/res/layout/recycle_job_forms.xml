<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycle_job_forms"
    android:layoutDirection="rtl"
    android:background="@color/white"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    >


       <!-- <androidx.cardview.widget.CardView
            android:id="@+id/yooo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="white"
            app:cardCornerRadius="10dp"
            >-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                >

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="@string/JobForm"
                      android:textColor="@color/black"
                      android:fontFamily="@font/bold"
                      android:layout_marginBottom="7dp"

                      />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">




                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="start"
                            >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Rooms"
                            android:textColor="@color/darkblue"
                            android:layout_marginStart="5dp"
                            android:textDirection="rtl"
                            android:fontFamily="@font/bold"
                            android:textSize="15sp" />

                            <TextView
                                android:id="@+id/Rooms"
                                android:layout_marginStart="52dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layoutDirection="rtl"
                                android:gravity="center"
                                android:text="15"
                                android:textColor="@color/danger"
                                android:fontFamily="@font/bold"
                                android:textDirection="rtl" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="start"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Budget"
                                android:textColor="@color/darkblue"
                                android:textDirection="rtl"
                                android:fontFamily="@font/bold"
                                android:layout_marginStart="5dp"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/Budget"
                                android:layout_marginStart="94dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layoutDirection="rtl"
                                android:gravity="center"
                                android:text="15"
                                android:textColor="@color/danger"
                                android:fontFamily="@font/bold"
                                android:textDirection="rtl" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="start"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/StartDate"
                                android:textColor="@color/darkblue"
                                android:textDirection="rtl"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/bold"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/StartDate"
                                android:layout_marginStart="42dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layoutDirection="rtl"
                                android:gravity="center"
                                android:text="15"
                                android:textColor="@color/danger"
                                android:fontFamily="@font/bold"
                                android:textDirection="rtl" />
                        </LinearLayout>
                        <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/EndDate"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/darkblue"
                            android:fontFamily="@font/bold"
                            android:textDirection="rtl"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/EndDate"
                            android:layout_marginStart="62dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold"
                            android:layoutDirection="rtl"
                            android:gravity="center"
                            android:text="77.22"
                            android:textColor="@color/danger"
                            android:textDirection="rtl" />
                    </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="start"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/City"
                                android:textColor="@color/darkblue"
                                android:fontFamily="@font/bold"
                                android:layout_marginStart="5dp"
                                android:textDirection="rtl"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/City"
                                android:layout_marginStart="107dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bold"
                                android:layoutDirection="rtl"
                                android:gravity="center"
                                android:text="6/2/2020"
                                android:textColor="@color/danger"
                                android:textDirection="rtl" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="start"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Address"
                                android:textColor="@color/darkblue"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/bold"
                                android:textDirection="rtl"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/Adress"
                                android:layout_marginStart="92dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bold"
                                android:layoutDirection="rtl"
                                android:gravity="center"
                                android:text="6/2/2020"
                                android:textColor="@color/danger"
                                android:textDirection="rtl" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            >
                            <TextView


                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bold"
                                android:layoutDirection="rtl"
                                android:gravity="center"
                                android:text="@string/FormStatus"
                                android:textColor="@color/darkblue"
                                android:textSize="15dp"
                                android:textDirection="rtl" />

                            <TextView
                                android:id="@+id/fStatus"
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bold"
                                android:layoutDirection="rtl"
                                android:gravity="center"
                                android:text="בהמתנה"
                                android:textColor="@color/quantum_orange"
                                android:textDirection="rtl" />

                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bold"
                                android:layoutDirection="rtl"
                                android:gravity="center"
                                android:text="@string/Assosiatedworker"
                                android:textColor="@color/darkblue"
                                android:textSize="15sp"
                                android:textDirection="rtl" />

                            <TextView
                                android:id="@+id/workername"
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bold"
                                android:layoutDirection="rtl"
                                android:gravity="center"
                                android:text="בהמתנה"
                                android:textColor="@color/quantum_orange"
                                android:textDirection="rtl" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            >
                        <ImageView
                            android:id="@+id/workerimage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@mipmap/icon"
                            />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        <!--</androidx.cardview.widget.CardView>-->


</RelativeLayout>