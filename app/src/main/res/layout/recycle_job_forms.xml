<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycle_job_forms"
    android:layoutDirection="rtl"
    android:background="@color/white"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    >




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="7dp"
                    >
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/JobForm"
                      android:textSize="16sp"
                      android:textColor="@color/black"
                      android:fontFamily="@font/bold"


                      />

                <TextView
                    android:id="@+id/formid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bold"
                    />
                 </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">




                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="start"
                            >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Rooms"
                            android:textColor="@color/darkblue"
                            android:layout_marginStart="5dp"
                            android:textDirection="rtl"
                            android:fontFamily="@font/bold"
                            android:textSize="15sp" />

                            <TextView
                                android:id="@+id/Rooms"
                                android:layout_marginStart="52dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layoutDirection="rtl"
                                android:gravity="center"
                                android:text="15"
                                android:textColor="@color/danger"
                                android:fontFamily="@font/bold"
                                android:textDirection="rtl" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="start"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Budget"
                                android:textColor="@color/darkblue"
                                android:textDirection="rtl"
                                android:fontFamily="@font/bold"
                                android:layout_marginStart="5dp"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/Budget"
                                android:layout_marginStart="94dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layoutDirection="rtl"
                                android:gravity="center"
                                android:text="15"
                                android:textColor="@color/danger"
                                android:fontFamily="@font/bold"
                                android:textDirection="rtl" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="start"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/StartDate"
                                android:textColor="@color/darkblue"
                                android:textDirection="rtl"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/bold"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/StartDate"
                                android:layout_marginStart="42dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layoutDirection="rtl"
                                android:gravity="center"
                                android:text="15"
                                android:textColor="@color/danger"
                                android:fontFamily="@font/bold"
                                android:textDirection="rtl" />
                        </LinearLayout>
                        <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/EndDate"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/darkblue"
                            android:fontFamily="@font/bold"
                            android:textDirection="rtl"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/EndDate"
                            android:layout_marginStart="62dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold"
                            android:layoutDirection="rtl"
                            android:gravity="center"
                            android:text="77.22"
                            android:textColor="@color/danger"
                            android:textDirection="rtl" />
                    </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="start"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/City"
                                android:textColor="@color/darkblue"
                                android:fontFamily="@font/bold"
                                android:layout_marginStart="5dp"
                                android:textDirection="rtl"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/City"
                                android:layout_marginStart="107dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bold"
                                android:layoutDirection="rtl"
                                android:gravity="center"
                                android:text="6/2/2020"
                                android:textColor="@color/danger"
                                android:textDirection="rtl" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="start"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Address"
                                android:textColor="@color/darkblue"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/bold"
                                android:textDirection="rtl"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/Adress"
                                android:layout_marginStart="92dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bold"
                                android:layoutDirection="rtl"
                                android:gravity="center"
                                android:text="6/2/2020"
                                android:textColor="@color/danger"
                                android:textDirection="rtl" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            >
                            <TextView


                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bold"
                                android:layoutDirection="rtl"
                                android:gravity="center"
                                android:text="@string/FormStatus"
                                android:textColor="@color/darkblue"
                                android:textSize="15dp"
                                android:textDirection="rtl" />

                            <TextView
                                android:id="@+id/fStatus"
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bold"
                                android:layoutDirection="rtl"
                                android:gravity="center"
                                android:text="@string/Active"
                                android:textColor="@color/danger"
                                android:textDirection="rtl" />

                            <TextView
                                android:layout_marginTop="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bold"
                                android:layoutDirection="rtl"
                                android:gravity="center"
                                android:text="@string/Assosiatedworker"
                                android:textColor="@color/darkblue"
                                android:textSize="15sp"
                                android:textDirection="rtl" />

                            <TextView
                                android:id="@+id/workername"
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bold"
                                android:layoutDirection="rtl"
                                android:gravity="center"
                                android:text="@string/wait"
                                android:textColor="@color/danger"
                                android:textDirection="rtl" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            >
                        <ImageView
                            android:id="@+id/workerimage"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            app:srcCompat="@mipmap/icon"
                            />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


    <LinearLayout
        android:id="@+id/aaaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
                <LinearLayout
                    android:id="@+id/RateDel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:visibility="visible"
                    android:orientation="vertical"
                    >


                    <Button
                        android:id="@+id/deletebut"
                        android:layout_width="230dp"
                        android:paddingRight="20dip"
                        android:layout_marginTop="5dp"
                        android:shadowDy="@android:integer/config_longAnimTime"
                        android:shadowDx="@android:integer/config_longAnimTime"
                        android:layout_height="50dp"
                        android:fontFamily="@font/bold"
                        android:drawableStart="@drawable/delete_icon"
                        android:text="@string/Deleteform"
                        android:textColor="@color/black"
                        android:background="@drawable/white_button"
                        />

                    <Button
                        android:id="@+id/ratebut"
                        android:layout_width="230dp"
                        android:layout_marginTop="5dp"
                        android:paddingRight="20dip"
                        android:layout_height="50dp"
                        android:textColor="@color/black"
                        android:shadowDy="@android:integer/config_shortAnimTime"
                        android:shadowDx="@android:integer/config_longAnimTime"
                        android:background="@drawable/white_button"
                        android:text="@string/RateEmployee"
                        android:visibility="invisible"
                        android:fontFamily="@font/bold"
                        android:drawableStart="@drawable/icons"
                        android:gravity="center"

                        />

                    <Button
                        android:id="@+id/addfav"
                        android:paddingRight="20dip"
                        android:shadowDy="@android:integer/config_longAnimTime"
                        android:shadowDx="@android:integer/config_longAnimTime"
                        android:layout_width="230dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/bold"
                        android:textColor="@color/black"
                        android:drawableStart="@drawable/plus_icon"
                        android:text="@string/AddEmpToFav"
                        android:background="@drawable/white_button"
                        android:visibility="invisible" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cleaner"/>
                </LinearLayout>

    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/switch1"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:text="@string/Public"
                        android:textSize="15sp" />

                    <Button
                        android:layout_width="140dp"
                        android:layout_height="30dp"
                        android:background="@drawable/login_btn"
                        android:textColor="@color/white"
                        android:fontFamily="@font/robotobolditalic"
                        android:text="@string/DoneJob"
                        android:id="@+id/closedjob"
                        android:layout_marginStart="120dp"/>



                </LinearLayout>
            </LinearLayout>
        <!--</androidx.cardview.widget.CardView>-->


</RelativeLayout>