<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="4dp"
    android:layoutDirection="rtl">

    <androidx.cardview.widget.CardView
        android:id="@+id/row"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/darkblue"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="TODO"
                android:paddingLeft="@dimen/dimen_20dp"
                android:visibility="gone"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/white"
                    android:textDirection="rtl"
                    android:textSize="@dimen/dimen_20dp" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:text="TextView"
                    android:textColor="@color/white"
                    android:textDirection="rtl" />

                <LinearLayout
                    android:id="@+id/endButtons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/rateBtn"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/white_button"
                        android:text="@string/RateUser"
                        android:textColor="@color/quantum_googgreen800"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/addToFavoriteBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/white_button"
                        android:fontFamily="@font/regular"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/addToFavorite"
                        android:textColor="@color/quantum_googgreen800"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/favoriteButtons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone">


                    <Button
                        android:id="@+id/deleteFavoriteBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="1dp"
                        android:background="@drawable/white_button"
                        android:fontFamily="@font/regular"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/removeFavorite"
                        android:textColor="@color/danger"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/favoriteRateBtn"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/white_button"
                        android:text="@string/RateUser"
                        android:textColor="@color/quantum_googgreen800"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
